<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_color" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_color" />
            <stroke android:width="1dp" android:color="@color/on_surface_variant" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector> 